//변수에 값을 대입해 콘솔 및 브라우저를 통해 출력할수 있음

<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <script>
       let myPassword; //변수선언
       let str1;

       //let 1str; //숫자 먼저 나올수 없음

       let _str;
       let $str='aa';
       console.log($str);

       //let my passowrd; //공백 불가능
       //카멜 표기법
       let yourPassword; //두번째 단어의 첫글자를 대문자로 표현
       let myId;




    </script>
</body>
</html>

//변수를 선언할 때에는 특수문자가 변수명 앞으로 갈 수 없음
//또 띄어쓰기를 사용할 수 없으므로 카멜 표기법을 사용한다( 낙타의 등 혹 처럼 소문자와 대문자로 구분하여 사용한다.)

!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <script>
        //데이터 유형: 숫자, 문자열, 불(논리), 객체, undefined, (함수)
        let num=20;
        console.log(num);

        let name='33';
        let str='자바스크립트 재밌네';

        let bool1 = 4>5;
        console.log(bool1);

        let bool2=true;
        console.log(bool2);

        //alert, prompt, confirm
        let age = prompt('나이 입력해라'); //내가 입력한 나이가 age 변수에 대입됨
        console.log(age);

        let str2; //값이 할당되지 않은 상태 
        console.log(str2);  //undefined





    </script>
</body>
</html>

//데이터 유형을 파악하며 boolean 으로 변수의 값이 true인지 false인지 확인 할 수 있다.

<!DOCTYPE html>
<head>
</head>
<body>
    <script>
      let name='tom';
      let age=44;

      //tom은 44살이다
      document.write(name+"은 " + age + "살이다" +"<br><br>");

      let name2='juli';
      let msg="환영해요!!";
      //juli님 환영해요!! 출력
      document.write(name2 +"님 " +msg +"<br><br>");

      let name3='bob';
      let age2=22;

      //백틱사용(내 이름은 bob이고 나이는 22살이다)
      //백틱에서 변수를 사용할 때 ${변수명}으로 사용한다
      let message=`내 이름은 ${name3}이고 나이는 ${age2}살이다`;
      document.write(message +"<br>" );

      //내년에는 나이가 23살이 된다
      let message2=`내년에는 나이가  ${age2+1}살이 된다`;
      document.write(message2+"<br>");

      let a=3;
      let b=4;

      //백틱으로 3+4=7 입니다.-> 브라우저에 출력
      let n=`${a}+${b}=${a+b} 입니다.`;
      document.write(n);





    </script>
</body>
</html>

//백틱 ` 을 사용하여 변수 나열을 할 수있다.
// 백틱`을 사용할 경우 ${}를 이용하여야 한다.​
