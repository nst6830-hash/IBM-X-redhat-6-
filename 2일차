        */

        if(9<10){
            document.write("작다")
        }
        else if(5<10){
            document.write("5는 10보다 작다");
        }
        else{ //9>=10
            document.write("크다")
        };
        //if문이 true일 경우 뒤의 조건식은 확인하지않는다.
        //반대로 false일 경우 else 조건식으로, else가 false일 경우 else if로 넘어간다.
        </script>
</body>
