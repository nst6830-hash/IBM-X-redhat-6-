//and or not을 응용할수있다.

<!DOCTYPE html>
<head>
</head>
<body>
    <script>
        let ok=confirm('정기구독을 하시겠습니까?')

        if(ok==true){ //ok누르면
            alert('결제가 진행됩니다.');
        }
        else{ // 취소 버튼 클릭시 ok == false
            alert('취소되었습니다.')
        }
        /*
        else if (!ok){
            alert('취소되었습니다')
        }
        */
    </script>
</body>
</html>

//if문과 confirm을 이용할 수 있다.

<!DOCTYPE html>
<head>
</head>
<body>
    <script>
        let n= parseInt(prompt('정수 입력'));

        if(n%2==0){ //입력한 수를 2로 나누었을때 나머지가 0 = 짝수
            alert(`${n}은(는) 짝수다`)
        }
        else if(n%1==0){
            alert(n + '은(는) 홀수다')
        }

    </script>
</body>
</html>

<!DOCTYPE html>
<head>
</head>
<body>
    <script>
    
        let x=35;
        let y=x/10;
        let z=x%2;
        let n='35';
        //let 변수 지정시 , 를 이용하여 한줄에도 가능
        //예시 let a= true, b=false

        document.write((x!==y) + "<br>");
        document.write((x==y) + "<br>"); //문자비교
        document.write((x===y) + "<br>"); //데이터 타입비교

        let a= true, b=false;
        document.write((a&&b) +'<br>');
        document.write((a||b) +'<br>');
        document.write((a===b) +'<br>');
    
        //데이터 자료형 : 논리(boolean),숫자,문자,객체,undifined
    </script>
</body>
</html>


<!DOCTYPE html>
<head>
</head>
<body>
    <script>
    
        //프롬창에 이름 입력해서
        //취소 강제로 닫을경우 "이름 없다" 브라우저 출력
        //아무것도 입력 X 이름 입력 안함 출력
        //이름 입력할 경우 (위 조건이 다 아닐경우)


       let name=prompt('이름을 입력');
       if(name==null){
            document.write('이름없음')
       }
       else if(name==""){
            document.write('이름이 입력되지 않음')
       }
       else{
            document.write(name)
       }
    </script>
</body>
</html>

