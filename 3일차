        //   초기    조건    증감
        for(let n=1; n<=10; n++){ //1~10까지 1씩 증가
            document.write(n + "<br>"); // 출력
        };

    document.write("<br>");

        for(let n=2; n<=10; n+=2){ //2부터 2의 배수로 증가
            document.write(n + "<br>");
        }

    document.write("<br>");

        for(let n= 10; n>=0; n--){ //10부터 0까지 감소
            document.write(n +"<br>")
        }
    </script>
