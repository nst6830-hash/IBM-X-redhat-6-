        //전역변수
        let name ='tom'; //변수 선언 및 초기화

        function call(){           
            let msg='hi';//지역변수
            console.log(`${msg} ${name}`);

        }
        call()
       // console.log(msg); 지역변수이기 때문에 함수 문 밖으로 나왔기에 실행안됨
        
