//강사님 풀이

    let sum=0; //총합 변수
    let i=0; //정수의 입력된 횟수
       
        while(true){
            let n=parseInt(prompt('정수입력'))
            sum+=n; //sum=sum+n
            i++;

            if(n==0){
                i--; //0을 입력할 경우 i 변수값 증가 x
                break;
            }
        }
        document.write(`${sum/i}`)


