let n=1; //초기식 

/*do { document.write(n + " "); 
     n++; //증감식
	
}
 while(n<=10); //조건식
        
    //do while 은 실행되는 증감식이 앞순서에 있기 때문에 아래에 조건식에 부합하지 않더라도
    //증감식이 실행된다. 최소 한번
