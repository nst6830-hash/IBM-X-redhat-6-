//2일차에 배운 반복문을 사용할 수 있다.

<!DOCTYPE html>
<head>
</head>
<body>
    <script>
        //prompt로 정수 입력받음 -> 입력한 정수(문자열 타입)=> 정수타입으로 변환
        let n=parseInt(prompt('정수 입력'));

        switch(n){
            case 2:
                for(let i=1;i<=9;i++){ //1~9까지 1씩 증가
                    document.write(`2단 출력 ${n*i}` + "<br>");
                }
                break;

            case 3:
                for(let i=1;i<=9;i++){
                    document.write(`3단 출력 ${n*i}` + "<br>");
                }
                break;
            
            default:
                document.write("2,3단 아니네~");
                break;
        }
    
   
    </script>
</body>
</html>
//prompt로 입력된 값은 항상 string 정수로 변환 하고 싶다면 parseInt를 이용하자
// 의도를 확실히 !

<!DOCTYPE html>
<head>
</head>
<body>
    <script>
        //for문 중첩
        //바깥 for문을 기준으로 안쪽 for문이 반복된다.
            //구구단 출력해보기
            //n=2일때 ㅡ=1~9 반복
            for(let n=2; n<=9; n++){ // 2 3 4 5 6 7 8 9
                for(let m=1; m<=9; m++){
                    document.write(n + "*" + m + "=" + (n*m)+ "<br>");
                }

            }
        for(let n=5; n<=9; n++){
            for(let m=1; m<=9; m++){
                document.write(n + "*" + m + "=" + (n*m) + "<br>")
            }
        }
    </script>
</body>
</html>

//for문 중첩으로 구구단을 출력할수 있다.

<!DOCTYPE html>
<head>
</head>
<body>
    <script>
        //for문으로
        //1~100 까지 범위 5의 배수만 출력

        for(let n=1; n<=100;n++){ //전제 조건
            if(n%5==0){ //세부 조건
                document.write(n + "<br>");

            }

        }
        //for문으로 전제조건을 확립한 후 세부 조건으로 출력 하기
    </script>
</body>
</html>

