<body>
    <script>

       
        //함수명 sumMulti
        //매개변수는 2개 (x,y)
        //return (결과값 반환):
        function sumMulti(x,y){//입력값 (x,y)
            if(x==y){ //x와 y 값이 같다면 
                return x*y; //x * y 값을 반환한다.(출력값)
            }
            else{ // x와 y 값이 다르다면
                return x+y; // x+y 값을 반환 (출력값)
            }
        } 
        
        console.log(sumMulti(4,10));
        console.log(sumMulti(10,10));
        

        function susmMulti1 (x,y){
            return (x==y)?(x*y) : (x+y);
        }
            console.log(susmMulti1(4,10))
            console.log(susmMulti1(10,10))
            


        // function gugu(){
