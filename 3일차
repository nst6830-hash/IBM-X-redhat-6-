            let msg= `안녕 ${name}`//name이라는 파라미터를 받아서 msg에 저장
            console.log(msg); // 
        }
        fun('길동');// 길동 -> name 
        //함수를 호출해야 함수 안의 블럭이 실행된다.



    </script>
