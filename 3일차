    <script>
    
//     1. 1~20까지 합(do~while)
// 2. n1을 50, n2를 100으로 초기화하여 두 수 중 큰 수를 판별하여 출력해라. (삼항 연산자 활용)
// 3.1 1~50 정수 중 6의 배수를 출력해라.(for, if)
// 3.2 1~50까지의 총합 출력해라.
// 4. 0~30까지 중에서 5의 배수를 제외하고 출력해라(무한반복문과 break, continue를 다 사용)




       document.write('1번문제'+'<br>');
        let n=1;
        let sum=0; //sum은 항상 0 초기값 설정

        do{
            sum+= n; //n=sum+n
            n++;
        }
        while(n<=20)     
            document.write(sum);

                document.write("<br>");    
        document.write('2번문제'+'<br>');
            let n1=50
            let n2=100
            let a=(n1>n2)? n1 : n2
            document.write(a);

                document.write("<br>"); 
        document.write('3.1번문제'+'<br>');
        
       

            let m;
        for(m=1; m<=50; m++){
            if(m%6 == 0){
                document.write(m + "<br>");
        }
        }
                
        document.write('3.2번문제'+'<br>');
            let c;
            sum=0;

            for(c=1; c<=50; c++){
                sum += n;
            }
            document.write(sum);
                document.write("<br>"); 
        document.write('4번문제'+'<br>');

            for(let i=1;i<=30;i++){
                if(i%5==0){
                    continue;
                }
                document.write(i);
            }
        let n=0; //초기식

        while(true){
            if(n>30){
                break;
            }
            if(n%5==0){
                n++; //1증가
                continue;
            }
            document.write(`${n}`+ ' ');
            n++; //증감식 (반복문wihle 안에)
        }
        
            

//강사님 풀이

    </script>
</body>
