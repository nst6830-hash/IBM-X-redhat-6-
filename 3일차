    //구구단의 짝수단만 출력

    let dan=2; //초기식
    while(true){
        if(dan==10){ // 조건식
            break;
        }
        for(let i=1; i<=dan ;i++){ //곱하는 수가 단 정수값이 같아질 때 까지만 출력 
            document.write(dan + '*' + i + '=' + (dan*i) + "<br>");

        }
        dan+=2; //증감식

    }



