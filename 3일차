<body>
    <script>
        let x=parseInt(prompt('입력'));
        let y=parseInt(prompt('입력'));

        //함수명 : maxXY
        //매개 변수는 x y
        function maxXY (x,y){
            if(x==y){
                return '같다';
            }
            else if(x>y){
                return `${x}가 ${y}보다 크다`

            }
            else{
                return`${x}가 ${y}보다 작다`
            }
        }
       //함수 호출 alert로 
        alert(maxXY(x,y));

    </script>
</body>
</html>

