<!DOCTYPE html>
<head>
</head>
<body>
    <script>
        //전역변수 : global variable : 전체 코드에서 사용가능
        // 함수 밖에서 선언 / 프로그램 전역에서 사용 가능
        //지역변수 : local variable : 선언된 함수 내에서만 사용가능
        // 선언된 함수 안에서 사용가능
        
        let n=10; //전역변수 (블록 밖에서 선언)

        function f(){
            let m=1; //지역변수 (함수 안에 있기 때문)(블럭 안에서만 효력발생)
            document.write(m);
            document.write("<br>");
            document.write(n+"<br>");
        }
        f();

        document.write(n+"<br>"); //출력됨
        document.write(m+"<br>"); //출력되지 않음


    </script>
</body>
</html>

//지역변수와 전역 변수 

<!DOCTYPE html>
<head>
</head>
<body>
    <script>
        function cal(x,y,z){
            switch(x){ //스위치를 만들어 준다는 개념 (만들어진 스위치는 사칙연산들)
                case '+' :
                    document.write(y+z);
                    break;

                case '-' : 
                    document.write(y-z);
                    break;

                case '*' :
                    document.write(y*z);
                    break;

                case '/' :
                    document.write(y/z);
                    break;


            }
        }
        let a=prompt('사칙연산중 하나'); // + - / *
        let b=parseInt(prompt('첫번째 정수 입력'));
        let c=parseInt(prompt('두번째 정수 입력'));

        cal(a,b,c);

    </script>
</body>
</html>


