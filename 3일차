<!DOCTYPE html>
<head>
</head>
<body>
    <script>
        let sum=0; //초기값 설정
        //더하기 할때 에는 초기값을 0
        
        // for문으로 1~100 1씩 증가해서 5의 배수만 출력
        // for(let n=0; n<=100; n++){
        //     if(n%5==0){
        //     document.write(n + "<br>")
        //     }
        // }
        
        // for문으로 1~100 1씩 증가해서 5의 배수의 총합 출력
        for(let n=0; n<=100; n++){
            if(n%5==0){
                sum+=n; // sum=sum+n
                
            }
                
        }
        document.write(sum);
        //반복된 값을 누적된 값을 출력해야하기 때문에 for문 밖에 출력코드





    </script>
</body>
</html>

//for문을 이용하여 누적된 값을 도출할수 있다.

<!DOCTYPE html>
<head>
</head>
<body>
    <script>
         let a=prompt('정수1입력')
         let b=prompt('정수2입력')

        // if(a>b){
        //     document.write(a);
        
        // }
        // else{
        //     document.write(b);
        // }
        let n=(a>b)?a:b; //조건이 T ?뒤 실행, // 조건이 F :뒤 실행
            document.write(n);

    </script>
</body>
</html>


<!DOCTYPE html>
<head>
</head>
<body>
    <script>
        // //이 코드는 2의 배수를 제외하고 출력하기 (1~100)
        // for(let i=1;i<=100;i++){
        //     if(i%2==0){ //조건(2의배수이면)
        //         continue; //반복문 다시 실행
        //     }
        //     document.write(i+"<br>");
        // }
        
        //정수 입력 5번 하기 (횟수)

        let sum=0;
        for(let i=0;i<5;i++){
            let n=parseInt(prompt('정수입력'));
           
            if(n<0){
                continue; //올라가서 반복문 실행
            }
            else{ //n>=0
                sum+=n;
            }
        }
            document.write(`입력된 총 합 ${sum}`);
            
            //sum  사용시 초기값 0설정 하기

        // while(true){ //조건문에 T 무한반복문
        //     let name=prompt('이름');
        //     if(name == '길동'){
        //         break;
        //     }
        //     document.write(name);
        //}
    </script>
</body>
</html>

//continue를 이용해 반복문 실행을 할 수 있다.
