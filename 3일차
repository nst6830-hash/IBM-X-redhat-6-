    <script>
        let sum=0; //초기값 설정
        //더하기 할때 에는 초기값을 0
        
        // for문으로 1~100 1씩 증가해서 5의 배수만 출력
        // for(let n=0; n<=100; n++){
        //     if(n%5==0){
        //     document.write(n + "<br>")
        //     }
        // }
        
        // for문으로 1~100 1씩 증가해서 5의 배수의 총합 출력
        for(let n=0; n<=100; n++){
            if(n%5==0){
                sum+=n; // sum=sum+n
                
            }
                
        }
        document.write(sum);
        //반복된 값을 누적된 값을 출력해야하기 때문에 for문 밖에 출력코드





    </script>
</body>
</html>

//for문을 이용하여 누적된 값을 도출할수 있다.

