        //객체를 만들기 위한 틀(기본폼을 지정해준다고 생각하면됨)
        function User(name,age,grade){
            this.name=name; //this = User 생성자 객체 자신을 의미한다.
            this.age=age;
            this.grade=grade;


            this.show=function(){
                console.log(`이름은${name},나이는${age},등급은${grade}`)
            }
        }
        //생성자 함수 객체 생성
        //틀에 들어가는 재료 (각 각의 재료가 들어감으로 n과 m이라는 객체가 생성됨)
        //             name  age  grade
        let n=new User('mike',32,'gold');
        let m=new User('jake',31,'silver');

        
        n.show();
        m.show();



        // //1.기본 객채구조 
