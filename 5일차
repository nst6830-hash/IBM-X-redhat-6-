    <script>
        //class를 css 로 접근할 때에 앞에 .을 붙인다.
        //id를 css로 접근 할 때에 앞에 #을 붙인다.

        let n=document.querySelector('.di1');//div로 묶여있기 때문.
        let m=document.querySelector('.di1 h2');
        //같은 이름의 css선택자가 여러개 있으면 첫번째 요소만 선택됨.
        n.style.color='blue'
        m.style.color='red'

        //querySelector는 배열로 선택 불가능

        //1. classname으로 test1,2,3,4 접근해서 변수에 저장
        let classname1=document.getElementsByClassName('di1');
        document.write(classname1);//[object HTMLCollection]

        //2. classname1 에 저장된 test1,2,3,4의 글자색을 orange로 바꾸기
        for(let i=0; i<classname1.length;i++){
            classname1[i].style.color='orange'
        }
        
        //3. Test5,6 객체에 접근해서 변수에 저장 (id추가)
        let a =document.getElementById('a');
        let b =document.getElementById('a1');
            
        

        
    </script>
</body>
</html>

