    fruit.shift(); //첫번쨰 요소 제거
    console.log(fruit);

    fruit2.push('grape');//마지막에 요소 추가(맨 뒤로)
    console.log(fruit2);
    
     fruit2.unshift('strawbrrey');//첫번째에 요소 추가(맨 뒤로)
    console.log(fruit2);



        
        let arr=[1,2,3,4,5];

        function plus(a,b){
        return a+b;
    }
    function multi(a,b){
        return a*b;
    }
    //배열의 각 요소를 순회 하며 값을 누적 -> 하나의 결과값으로 반환 = reduce

    console.log(arr.reduce(plus));
    console.log(arr.reduce(multi));
    //각 각의 출력문은 같음.
    console.log(arr.reduce((a,b) => a+b));
    console.log(arr.reduce((a,b) => a*b));
    //(a,b) a는 누적값,b 현재값

    let arr=[1,2,3,4,5];

    function ch(a,b){
        console.log(`${a}의 인덱스는? ${b}`);
        
    }
    //*** Array.prototype.forEach() *** 중요함 많이 쓰임
    arr.forEach(ch)
    //배열명.forEach(함수명)
    //배열명.forEach(element, index, array)

    //함수를 따로 안만들고 forEach안에서 함수 구현하기
    arr.forEach((a,b) => 
        console.log(`${a}의 인덱스는? ${b}`));
       
        arr.forEach(function (a,b,c){
            console.log(a,b,c);          
        })
//매개변수를 불러오지 않은 상태에서 forEach 를 이용하여 사용할 수 있다.

