   <script>
  let ary=[];

  for(let i=0;i<10;i++){
    let randomnum=Math.floor(Math.random() *100+1);
    ary.push(randomnum);// ary이름의 배열 저장

  }
  document.writeln(ary+"<br>");
        //compareFunction 
  ary.sort((a,b) => a-b); //오름차 순으로 정렬
    document.writeln(`제일 큰수 : ${ary[ary.length-1]}`);
  ary.sort((a,b) => b-a); //내림차 순으로 정렬
    document.writeln(`제일 큰수 : ${ary[0]}`);

    //compareFunction이 제공되지 않으면 숫자열이 문자열로 인식되어 순서가 잘못 될 수 있음
   

  
   </script> 

 
   

</body>
</html>


