        <script>  
        //body객체 선택
        let body=document.getElementById('body');

        //날자 객체 생성
        let date=new Date();

        //시간 알아내기
        let hours=date.getHours();

        if(hours<12){  
            body.style.backgroundColor=('yellow')
        }
        else if (hours>13){
            body.style.backgroundColor=('green')
        }




    //지금 시간이 오전이면 배경색 yellow
    //          오후라면 배경색 green 
        

        </script>  
</body>
</html>



