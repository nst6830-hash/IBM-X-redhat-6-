    <script>

        function show(n){
            document.write(n+"<br>");
        }
            //0~99사이 수 소수점 이하 제거해서 10개 출력
        for(let i=0;i<10;i++){
            let n=Math.floor(Math.random()*100);
            show(n)
        }
    </script>
