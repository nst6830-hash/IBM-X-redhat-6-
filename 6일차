 <select id="year"></select>
    <option></option>
    <option></option>
    

    <script>
      let n=document.getElementById('year');
      let str='';

      //날짜 객체 생성해서 오늘 년도 get
      let now=new Date();
      let year=now.getFullYear();

      for(let i=year;i>=1980;i--){
        str=str+'<option>'+i+"년</option>"
      }
    n.innerHTML=str; //유일한 태그 인식
    

    </script> 




</body>
