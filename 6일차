    <script>

        //식을 입력하여 계산 버튼을 누르면 결과값 도출 구현
     function calcu(){
        let cal=document.getElementById('cal'); //cal에 대한 id 추출
        let res=document.querySelector('#res'); //res 에 대한 id 추출 
                                                //quertSelector 로 불러오면 꼭 #
        
        //document.write(cal.value);//input 태그에서 .value -> 텍스트 창에 입력한 실질적 데이터
        res.value=eval(cal.value);
     }


    </script> 




