        function calcu(){
            //1~9까지 소수점 X 정수만 뽑기
            return Math.floor(Math.random()*9+1);
        }

    </script>
<body>
    <script>




    let n=calcu() + '*' + calcu();

    let n1=prompt(n+"의 정답은?");
        if(n1==null){ //n1이 null 일 경우
            document.write("종료");
        }
        else{ //n1 이 null 이 아닐 경우
            let result=eval(n); 
            document.write(typeof(result));
            document.write(typeof(n1));
            if(result == n1){ //자동 형 변환 비교가능
                    document.write('정답')                  
            }
            else{
                        document.write('오답')
            }
        }


    </script>
</body>


