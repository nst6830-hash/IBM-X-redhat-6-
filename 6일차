    <script>
        let a=document.querySelector('#head1');
        let b=document.getElementById('head2');
        let c=document.querySelector('#head3');

        a.innerHTML='자바스크립트'; //비어있는 head1에 글자를 삽입 <h1 id="head1">자바스크립트</h1>
        a.innerHTML='안녕 <a href= "#"> 링크1 </a>';

        //innerText 텍스트로만 인식 태그 인식 X
        b.innerText='파이썬'//<h1 id="head2">파이썬</h1>
        b.innerText='안녕 <a href= "#"> 링크2 </a>';
        //textContent 텍스트로만 인식 태그 인식 X
        c.textContent="리액트"
        c.textContent='안녕 <a href= "#"> 링크3 </a>';



    </script> 

