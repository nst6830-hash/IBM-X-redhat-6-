    //class 명 + tag명
    let n=document.querySelectorAll(".di1 h2");

    n[0].style.color='tomato';
    n[1].style.color='chocolate';
    n[2].style.color='salmon';
    
    document.write(n.length); // 배열의 길이(갯수) 4
    

</script>


