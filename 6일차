    <script>
        //1. 기본 객체 선언 방식 2.생성자 함수 선언 방식 (비슷한 객채 여러개 만들 때)

        function n(name,id,money){ //틀 만들기
            this.name=name; //name객체에 mike 변수 대입
            this.id=id;     //6830
            this.money=money;//10000

            this.money1=function(){
                return this.money;
            }

             this.plus=function(num){
                return this.money+=num
            }

             this.minus=function(nmu){
                return this.money-=num;
            }
        }

        let cos1=new n('mike','6830',10000)
        let cos2=new n('jack','9921',14000)

        document.write(cos1.name);

        //plus 함수 호출
        cos1.plus(5000);
        document.write(cos1.money1() + "<br>");
        


