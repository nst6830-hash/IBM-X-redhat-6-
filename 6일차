<body>
   <img class ='im' src="C:/Users/hi/Desktop/라멘.jpg">

   <button onclick="on()">이미지 경로</button>
   <button onclick="onchange()">이미지 경로 변경</button>

   <script>
//img 태크 객체 추출 -> class -> quertSelector로 
 let image = document.querySelector('.im'); //class 로 가져올 때에는 . 사용
 
 function on(){
    alert(image.getAttribute('src')); //속성명 가져오는

 }
function onchange(){
    alert(image.setAttribute('src','aa.png')); //속석명 바꾸는
    
 }
   </script> 

 
   

</body>
</html>

