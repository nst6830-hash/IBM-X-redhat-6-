<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
   
    <input type="radio" name="coffee" value="americano">아메리카노
    <input type="radio" name="coffee" value="latte">라떼
    <input type="radio" name="coffee" value="cappucino">카푸치노

    <input type="button" value="클릭해" onclick="on()">

   <script>

      let menu=null; //null 데이터 타입은 객체이다.

      //document.write(typeof(menu)); // object

      function on(){
         let coffee=document.getElementsByName("coffee");  //복수(배열형태)
         //document.write(coffee.length); //3
         for(let i=0;i<coffee.length;i++){
            if(coffee[i].checked==true){
               menu=coffee[i];   //라디오버튼 체크가 되어있는 값을 menu변수에 저장
            }
         }
         alert(menu.value +"주문 들어갔습니다"); //선택한 라디오버튼의 value값
      }


      
    
   </script> 

 
<!DOCTYPE html>
<html lang="en">
<head>
