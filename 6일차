    <script>
//분 을 알아내서 분이 짝수이면 배경색 yellow
//홀수면 red 로 하고
//분도 브라우저에 띄운다

        let date=new Date();
        let min=date.getMinutes();
        if(min%2==0){  
            document.body.style.backgroundColor='yellow'
        }
        else{
            document.body.style.backgroundColor='red'
        }

        document.write(`지금은 ${min}분 입니다`);
        
    </script>
</body>


<!DOCTYPE html>
<html lang="en">
<head>
</head>

<body>
    <script>

        let ary=new Array('tom','juli','jack');
        let ary1=new Array('bob');
        let n;

        function show(n){
            document.write(n+"<br>");

        }                               
                                        //index 0     1      2      0 
        n=ary.concat(ary1); //원본 ary는 변경 X ['tom','juli','jack','bob']
        show(n);

        n=ary.slice(1,2); //index 1부터 2 미만 = index 1 -> 원본 ary는 변경 X
        show(n);


        n=ary.sort(); //배열 정렬 (사전순으로 a,b,c~가,나,다~) -> 원본 배열 변경
        show(n);

        n=ary.reverse() //배열 순서 반대로 정렬 -> 원본 배열 변경
        show(n);

        n=ary.toString(); //배열을 문자열로 변환 
        document.write(typeof(n) + "<br>"); 
        show(n);
        //pop, shift, push, unshift => 원본 유지 안됨(원본 변경)
    </script>
</body>



