    <form name="test">
        <input type="text" name="test2">
    </form>
    

    </div>
    <script>
               //document.폼네임.요소네임
        let n=document.test.test2
        n.style.border='2px solid red'

        let n2=document.forms['test'].elements['test2'];
        n2.style.backgroundColor='yellow'
        
        let n3=document.forms['test']['test2'];
        n3.style.fontSize='50px'
        
    </script>


  
</body>

</html>

<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <form name="test">
        <input type="text" name="test2">
    </form>
    <div id="div1"></div>
    <script>
        let n= document.test.test2 // input tag
        let n2= document.getElementById('div1');

        //n에 키보드를 입력했을 때 이벤트
        //(고전이벤트 방식)
        n.onkeyup=function(){
        let n3 =n.value;
           //this.value;
    
            //div 영역에 n3 띄우기
            n2.textContent=n3;

        }

    </script>


  
</body>

</html>



<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
   <form name="test" class="t">
    <input type="text" name="first" value="001111" disabled>
    <input type="text" name="second">

    <!-- 일종의 묶는 작업(글자를 눌러도 입력)
    input type 의 id 값과 label for 의 이름이 같으면 같이 인식 -->
    <input type="radio" name="g1" id="male" disabled>
    <label for="male">남</label> 

    <input type="radio" name="g2" id="female" disabled>
    <label for="female">여</label>

   </form>
    <script>

        let n=document.test.second;
        console.log(n);
        let male=document.getElementById('male')
        let female=document.getElementById('female')

        n.onkeyup=function(){
            //고전이벤트 방식
            let num=this.value;
            if(num >= 1 && num <= 4){
                if(num==1 || num==3)
                male.checked=true;
                female.checked=false;
            }
            else{
                male.checked=false;
                female.checked=true;
            }
            
        }

    </script>


  
</body>

</html>   

<!DOCTYPE html>
<html lang="en">
<head>
    <h1>정보입력</h1>
    <form id="info">
    <p>이름<input type="text" id="name"> </p>
    <p>주소<input type="text" id="adr"> </p>
    <input type="submit" value="정보입력">
    </form> 
    <p id="output"></p>

</head>
<body>
   
    <script>
        let form=document.querySelector('#info');
        let name=document.querySelector('#name');
        let adr=document.querySelector('#adr');
        let output=document.querySelector('#output');
        
        //submit 버튼을 눌렀을 때에 서버로 전송되는 이벤트 -> onsubmit 이벤트
        form.onsubmit=function(e){
            e.preventDefault();
            //새로고침 방지하기 (기본 동작은 서브밋이 될 경우 다음 페이지로 넘어가야하는데 페이지가 없다)

            let p=document.createElement('p'); //p태그 생성(동적 생성)
            p.textContent = name.value + ',' + adr.value;
            output.appendChild(p);



        }

        

    </script>


  
</body>

</html>


<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
   <form name="f">
      <p>수 입력</p>
      <input type="number" name="num" id="num" min="1" max="100" required>
      <!-- <input type="text" minlength="2" maxlength="4" required> -->
      <button type="button" id="ch">확인</button>
   </form>
   <div id="di"></div>

   <script>
   
   //num, ch, di -> 태그객체 추출
   let n1=document.getElementById("num");
   //let n1=document.f.num;
   let n2=document.getElementById("ch");
   let n3=document.getElementById("di");

   //확인버튼 클릭하면 -> addEventListener형식
   n2.addEventListener('click',function(){
      if(n1.checkValidity()){  //입력요소에 유효한 데이터면 true, 아니면 false
         // "유효한 데이터" -> div영역에 띄우기
         n3.innerHTML="유효한 데이터";
      }
      else{
         n3.innerHTML=n1.validationMessage; //브라우저 기본 메시지
      }
   })







   </script>


</body>



</html>



