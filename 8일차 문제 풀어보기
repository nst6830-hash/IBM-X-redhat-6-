<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <h1>로그인</h1>
        <form name="login">

            <div>
                아이디<br>
                <input type="text" id="userId" placeholder="아이디 입력"> 
            </div>

            <div>
                패스워드<br>
                <input type="password" id="userPw" placeholder="패스워드 입력">
            </div>
            <button id="btn1">로그인</button>
        </form>
        <script>
    //웹페이지 작성하기.
    //로그인 버튼 기본 pink (@.style.) 마우스를 대면 tomato(mouseover)
    //아이디는 자바 패스워드는 1234 
    //둘 중 하나라도 틀리면 다시 입력 경고창
    let id=document.login.userId
    let pw=document.login.userPw

    let btn1=document.getElementById('btn1');

    btn1.style.backgroundColor='pink';
    btn1.addEventListener('mouseover',function(){
        btn1.style.backgroundColor='tomato';
    })
    btn1.addEventListener('mouseout',function(){
        btn1.style.backgroundColor='pink';
    })

    btn1.addEventListener('click',function(){
        if(userId.value != '자바' || userPw.value != '1234'){
            alert('다시 입력')
        }
        else{
            alert('로그인 성공')
        }
    })
    
    



  </script>
  
</body>
</html>
</html>



