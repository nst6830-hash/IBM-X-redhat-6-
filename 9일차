</head>
<body>

<script>
    //동기 : 순서대로, 하나씩 처리하는 방식
    //비동기 : 작업을 순서대로 처리하지 않음

    // function test(){
    //     setTimeout(function(){
    //         console.log("hello");
            
    //     },3000);
    // }
    // test();
    // console.log("hi")


// setTimeout(()=>{let n=a+b;console.log(n);},2000)
    // function add(a,b){
    //     let n=a+b; 
    //     setTimeout(function(){
    //         console.log(n);           
    //     },2000);
    // }
    // add(1,2);

    function add(a,b,callback){
        setTimeout(()=>{
            let sum=a+b;
            callback(sum);
        },3000)
    }

    add(1,2,(num)=>{
        console.log(num); 
    })
    // add(1,2,function num(){
    //     console.log(num);      
    // })
    
    
    
</script>

</body>


</html>


//콜백 함수


<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>

<script>
    //동기 : 순서대로, 하나씩 처리하는 방식
    //비동기 : 작업을 순서대로 처리하지 않음

    //고차 함수(함수를 매개변수로 받는 함수 / 함수를 리턴하는 함수)Higher-order Function
    function cook(food,callback){
        console.log(`${food}요리 시작한다`);

        //2초후에 '${파스타}요리 끝' 출력 후 '먹어 ' 출력
        setTimeout(()=>{
            console.log(`${food}요리 끝`);
            callback();
        },2000)
        
    }
    cook('파스타', ()=>{
        console.log('먹어');
    });


</script>

</body>

//콜백 함수를 응용할 수 있음


