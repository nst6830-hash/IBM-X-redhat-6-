<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <h1 class="a1 a2" id="b1">javascript</h1>
    <h2 class="a1 a2 a3">css</h2>

   <script>
    //classList
    let n=document.querySelector('#b1');
    console.log(n.classList.length); //해당 태그에 포함된 클래스 수를 출력 b1=h1

    n.addEventListener('click', function(){
        this.classList.add('active'); // 클래스 추가하기
    })
    n.addEventListener('mouseenter',function(){
        this.classList.remove('active');
    })
    

   </script>


</body>
</html>

//클래스의 수를 출력하거나, 추가,제거 하기


<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* 클릭하고 끄고 켜는 스위치가 되어 active class 생기면 설정한
        스타일에 따라서 변화하는 모습을 볼 수 있음 */
        .active{ 
            background-color: yellow;
            color: green;
        }
    </style>
</head>
<body>
    <h1 class="a1 a2" id="b1">javascript</h1>
    <h2 class="a1 a2 a3">css</h2>

   <script>
    let h1=document.querySelector("h1");
    let h2=document.querySelector("h2"); //
    //queryselector ('#아이디')
    //queryselector ('.아이디명')
    //queryselector ('태그명')

    h1.addEventListener('click',function(){
        this.classList.toggle('active'); //(toggle 끄고 켜는 스위치처럼 작동)
    })
     
   </script>


</body>

</html>


<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* 클릭하고 끄고 켜는 스위치가 되어 active class 생기면 설정한
        스타일에 따라서 변화하는 모습을 볼 수 있음 */
        .active{ 
            background-color: yellow;
            color: green;
        }
    </style>
</head>
<body>
    <h1 class="a1 a2" id="b1">javascript</h1>
    <h2 class="a1 a2 a3">css</h2>

   <script>
    let h1=document.querySelector("h1");
    let h2=document.querySelector("h2"); //
    //queryselector ('#아이디')
    //queryselector ('.아이디명')
    //queryselector ('태그명')

    h1.addEventListener('click',change)
    h2.addEventListener('click',change)

    function change(){ 
        let n=this.classList.contains ('active');
        //지정한 클래스 값이 엘리먼트의 클래스 속성에 존재하는확인
        alert(n)
    }
   </script>


</body>



<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
   <div class="div">
      <input type="text" id="inbox">
      <p>키 : <span id="result"></span></p>
   </div>

   <script>
      let inbox=document.getElementById("inbox");
      let result=document.getElementById("result");
   
      //고전이벤트방식
      //inbox에 키보드 입력했을때
      inbox.onkeyup=function(e){
         let code=e.keyCode;
         result.innerText=code;
      }



   </script>

  


</body>


</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css");
    
    /* 체크 박스 클릭시 할일에 취소선 만들기 */
    .checked{
        text-decoration: line-through;
        
    }
    
    
    </style>
</head>
<body>
    <div id="main">
        <h2>To Do List</h2>
        <input type="text" id="in" placeholder="할 일 추가">
        <div id="list"></div>
        
    </div>
   <script>
    //list ,in 객체 추출
    let lists= document.getElementById('list');
    let ins= document.getElementById('in');

    const KEY_ENTER=13; //enter 의 keycode 입력값 13

    

    ins.addEventListener('keypress',function(e){
        if(e.keyCode === KEY_ENTER){
            insertTodo();
            //enter 입력후 입력창 비우기
            ins.value ='';
        }

    })

    function insertTodo(){
        //div 태그 생성
        let div1=document.createElement('div');
        div1.innerHTML=`${ins.value}<input type="checkbox" 
        id="che"><i class="bi bi-trash3"></i>`;
        lists.appendChild(div1)
        //div 생성 태그를 lists에 자식 으로 붙이기
        
    }

    lists.addEventListener('click',function(e){
        if(e.target.classList.contains('bi-trash3')){//쓰레기통 아이콘
            let parent=e.target.parentElement; 
            //선택된 객체의 부모 div 영역 삭제(선택된 한 줄 )
            parent.remove();
        }
    })
    //checkbox,radio의 이벤트 형식은 onchange
    lists.addEventListener('change',function(e){
        //check 박스 체크하면 true
        if(e.target.id === 'che'){
            let parent=e.target.parentElement;//체크 박스의 부모 div
            parent.classList.toggle('checked'); 
            //체크 박스가 체크 될 경우 chceked 삽입

        }
    })

    //e.target : 실제로 클릭한 요소
    //e.target.parentElement : 이 요소를 감싸고 있는 바로 위 부모
   </script>

</body>


</html>

//할일 목록을 직접 입력하며 체크박스 체크시 취소선 생성과 쓰레기통 아이콘을 이용한 목록 삭제 기능



